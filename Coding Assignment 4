#Creating the list
List = []
Slist = []

#Picking a suit
def PickSuit():
    Suit = random.randint(1, 4)

    if Suit == 1:
        Suit = print("Hearts")
        Slist.append(1)
    if Suit == 2:
        Suit = print("Clubs")
    if Suit == 3:
        Suit = print("Spades")
    if Suit == 4:
        Suit = print("Diamonds")
        return Suit



#Picking a card
def deal_card():
    dealCard = random.randint(1, 13)
    if dealCard == 1:
        dealCard = print("Ace")
        List.append(1)
    elif dealCard == 2:
        dealCard = print("Two")
        List.append(2)
    elif dealCard == 3:
        dealCard = print("Three")
        List.append(3)
    elif dealCard == 4:
        dealCard = print("Four")
        List.append(4)
    elif dealCard == 5:
        dealCard = print("Five")
        List.append(5)
    elif dealCard == 6:
        dealCard = print("Six")
        List.append(6)
    elif dealCard == 7:
        dealCard = print("Seven")
        List.append(7)
    elif dealCard == 8:
        dealCard = print("Eight")
        List.append(8)
    elif dealCard == 9:
        dealCard = print("Nine")
        List.append(9)
    elif dealCard == 10:
        dealCard = print("Ten")
        List.append(10)
    elif dealCard == 11:
        dealCard = print("Jack")
        List.append(11)
    elif dealCard == 12:
        dealCard = print("Queen")
        List.append(12)
    elif dealCard == 13:
        dealCard = print("King")
        List.append(13)
    else:
        print("Not a Card")
    return dealCard


