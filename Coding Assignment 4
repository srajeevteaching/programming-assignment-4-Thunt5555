def main():
    print("Your Hand")
    print(PickSuit(),"of",deal_card())
    print(PickSuit(), "of", deal_card())
    print("Dealer's Hand")
    print(PickSuit(),"of",deal_card())
    print(PickSuit(),"of",deal_card())
